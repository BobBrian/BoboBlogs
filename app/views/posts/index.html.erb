<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <table class="table table-bordered border-primary">
    <thead>
      <tr>
        <th>Message</th>
        <th>Show Details</th>
      </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.message %></td>
        <td><%= link_to "Show this post", post %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New post", new_post_path %>
