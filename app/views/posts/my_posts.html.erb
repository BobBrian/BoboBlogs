<!-- app/views/posts/my_posts.html.erb -->
<h1>My Posts</h1>

<% if @posts.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Message</th>
          <th>Details</th>
          <!-- Add more table headers as needed -->
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.message %></td>
            <td> <%= link_to "Show", post %> </td>
            <!-- Add more table cells for additional post details -->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p>No post found.</p>
<% end %>

